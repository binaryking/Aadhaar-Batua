<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:theme="@style/AppTheme">

    <!--android.support.v4.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <!-android.support.design.widget.NavigationView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            app:headerLayout="@layout/drawer_header"
            app:menu="@menu/drawer"/>
    </android.support.v4.widget.DrawerLayout-->

    <RelativeLayout
        android:orientation="vertical"
        android:id="@+id/linear_layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="#1976D2"
        android:elevation="3dp"
        android:padding="10dp">




        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="30sp"
            android:textColor="@android:color/white"
            android:id="@+id/name"
            android:padding="5dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="@android:color/white"
            android:id="@+id/uid"
            android:padding="5dp"
            android:layout_below="@+id/name" />



    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/linear_layout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="2"
        android:layout_below="@+id/linear_layout1"
        android:padding="10dp">

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/pay_layout"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="#FFFFFF">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="25sp"
                android:text="Receiver"
                android:textColor="@android:color/black"
                android:padding="5dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/receiver_name"
                android:layout_gravity="center_horizontal"
                android:textSize="25sp"
                android:layout_margin="10dp"
                android:textColor="#ff000000"
                android:backgroundTint="@color/abc_background_cache_hint_selector_material_dark" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/receiver_uid"
                android:layout_gravity="center_horizontal"
                android:textSize="25sp"
                android:layout_margin="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/receiver_amount"
                android:layout_gravity="center_horizontal"
                android:textSize="25sp"
                android:layout_margin="10dp"/>

        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="#c0c0c0"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>



        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/recharge_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:paddingBottom="5dp"
            android:divider="#ff494949">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/future_balance"
                android:layout_gravity="center_horizontal"
                android:textSize="30sp"
                android:layout_margin="30dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="Enter the OTP received "
                android:ems="10"
                android:id="@+id/etOtp"
                android:layout_gravity="center_horizontal" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confirm Payment"
                android:id="@+id/bconfirm"
                android:layout_gravity="center_horizontal"
                android:padding="10dp"
                android:layout_marginTop="15dp" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
